{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src/**/*",
        "server.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}